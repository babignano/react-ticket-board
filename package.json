{
  "name": "react-ticket-board",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@react-ticket-board/frontend & npm run dev --workspace=@react-ticket-board/backend",
    "dev:frontend": "npm run dev --workspace=@react-ticket-board/frontend",
    "dev:backend": "npm run dev --workspace=@react-ticket-board/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@react-ticket-board/frontend",
    "build:backend": "npm run build --workspace=@react-ticket-board/backend",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
